<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_grey"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map2"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="220dp"
        tools:context=".MapsActivity" />


    <GridLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtRoute"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_white"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/card_viewA"
            android:layout_gravity="bottom">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/dark_grey">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/background_input"/>

                <androidx.core.widget.NestedScrollView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/dark_grey"
                        android:orientation="vertical">




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/background_prices"
                            android:drawableStart="@drawable/ic_minicar"
                            android:drawablePadding="25dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:text="Uber Go"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:paddingStart="65dp"
                            android:paddingTop="2dp"
                            android:text="1 hour"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:id="@+id/price1"
                            android:layout_marginTop="-50dp"
                            android:gravity="end"
                            android:paddingEnd="40dp"
                            android:paddingTop="8dp"
                            android:text="R200.00"
                            android:textColor="@color/black"
                            android:textSize="18dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="13dp"
                            android:background="@drawable/background_prices"
                            android:drawableStart="@drawable/ic_baseline_directions_car_24"
                            android:drawablePadding="25dp"
                            android:paddingTop="6dp"
                            android:paddingStart="10dp"
                            android:text="Uber"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-25dp"
                            android:paddingStart="60dp"
                            android:paddingTop="2dp"
                            android:text="1 hour"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="-40dp"
                            android:id="@+id/price2"
                            android:paddingEnd="40dp"
                            android:gravity="end"
                            android:paddingTop="8dp"
                            android:text="R230.00"
                            android:textColor="@color/black"
                            android:textSize="18dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="8dp"
                            android:paddingTop="8dp"
                            android:background="@drawable/background_prices"
                            android:drawableStart="@drawable/ic_baseline_directions_car_24"
                            android:drawablePadding="25dp"
                            android:paddingStart="10dp"
                            android:text="Uber X"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-23dp"
                            android:paddingStart="60dp"
                            android:paddingTop="0dp"
                            android:text="2 hours"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="-45dp"
                            android:gravity="end"
                            android:paddingEnd="40dp"
                            android:id="@+id/price3"
                            android:paddingTop="8dp"
                            android:text="R300.00"
                            android:textColor="@color/black"
                            android:textSize="18dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="13dp"
                            android:background="@drawable/background_prices"
                            android:drawableStart="@drawable/ic_baseline_directions_car_24"
                            android:drawablePadding="25dp"
                            android:paddingStart="10dp"
                            android:paddingTop="8dp"
                            android:text="Uber Comfort"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-23dp"
                            android:paddingStart="60dp"
                            android:paddingTop="2dp"
                            android:text="5 hours"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="-45dp"
                            android:gravity="end"
                            android:paddingEnd="40dp"
                            android:id="@+id/price4"
                            android:paddingTop="8dp"
                            android:text="R400.00"
                            android:textColor="@color/black"
                            android:textSize="18dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_prices"
                            android:drawableStart="@drawable/ic_baseline_directions_car_24"
                            android:drawablePadding="25dp"
                            android:paddingStart="10dp"
                            android:paddingTop="8dp"
                            android:text="Uber Van"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-23dp"
                            android:paddingStart="60dp"


                            android:text="Not Available"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="-50dp"
                            android:gravity="end"
                            android:paddingEnd="40dp"
                            android:id="@+id/price5"
                            android:paddingTop="8dp"
                            android:text="R700.00"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </GridLayout>


        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>